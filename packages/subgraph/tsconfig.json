{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "commonjs",
    "target": "es2019",
    "noEmit": false,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "compileOnSave": true,
  "include": ["scripts"]
}
