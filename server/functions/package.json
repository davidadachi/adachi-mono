{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "serve": "cd ../ && npx firebase emulators:exec --ui \"cd functions && tsc -w\"",
    "shell": "npm run build && npx firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "NODE_ENV=test mocha --require ts-node/register test/**",
    "ci_test": "cd ../ && npx firebase emulators:exec --project=dev \"cd functions && npm test\""
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "ethers": "^5.3.0",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.3.8",
    "@types/chai-subset": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.3",
    "mocha": "^8.1.3",
    "mocha-each": "^2.0.1",
    "prettier": "^2.1.2",
    "sinon": "^11.1.1",
    "typescript": "^4.3.5"
  },
  "private": true
}
